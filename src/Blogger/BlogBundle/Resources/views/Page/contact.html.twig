{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
	<header>
        <h1>Contact Us</h1>
    </header>
    
    {% if app.session.hasFlash('blogger-notice') %}
        <div class="blogger-notice">
            {{ app.session.flash('blogger-notice') }}
        </div>
    {% endif %}
    
    <p>Do you want to contact us?</p>
    
    <form action="{{ path('blogger_blog_page_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}
        
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}
        
        {{ form_rest(form) }}
        
        <input type="submit" value="Submit" />
    </form>
{% endblock %}