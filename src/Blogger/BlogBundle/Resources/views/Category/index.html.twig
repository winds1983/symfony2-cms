{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Category list{% endblock %}

{% block body %}
<h1>Category list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Rank</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('blogger_blog_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.rank }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('blogger_blog_category_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('blogger_blog_category_update', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('blogger_blog_category_create') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
